@model Wubbalubbadubzork.Models.RegisterViewModel
@{
    ViewBag.Title = "Registro";
}

<h2 class="text-center">@ViewBag.Title</h2>
<div class="container">
    <h4 class="text-center">Cree una cuenta nueva</h4>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="form-group">
                <div class="input-field col-md-3 col-md-offset-3">
                    <i class="material-icons prefix">account_circle</i>
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Correo", @class = "form-control" })
                </div>
                <div class="input-field col-md-3">
                    <i class="material-icons prefix">tag_faces</i>
                    @Html.TextBoxFor(m => m.Name, new { @placeholder = "Nombre", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="input-field col-md-6 col-md-offset-3">
                    <i class="material-icons prefix">lock_outline</i>
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Contraseña", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="input-field col-md-6 col-md-offset-3">
                    <i class="material-icons prefix">lock</i>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirmar Contraseña", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.ValidationSummary("", new { @class = "col-md-6 col-md-offset-3 text-left text-danger" })
        </div>
        <div class="form-group">
            <div class="text-center">
                <input type="submit" class="btn" value="Registrarse" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
